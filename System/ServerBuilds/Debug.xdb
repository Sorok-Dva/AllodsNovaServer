<?xml version="1.0" encoding="UTF-8" ?>
<basement.server.config.ServerBuild>
	<Header>
		<resourceId>108724238</resourceId>
	</Header>
	<name>Debug</name>
	<oneThread>false</oneThread>
	<forceGeometryIntersection>false</forceGeometryIntersection>
	<checkLocaleReferences>true</checkLocaleReferences>
	<allowNotIndexedResources>true</allowNotIndexedResources>
	<restrictedMapsLoading>true</restrictedMapsLoading>
	<isIndexUploadEnabled>true</isIndexUploadEnabled>
	<revealAggroLists>true</revealAggroLists>
	<netStatPeriodMs>60000</netStatPeriodMs>
	<saveAvatarIntervalMS>60000</saveAvatarIntervalMS>
	<turnOnProbes>
		<!-- IMPORTANT probes, modifications must be approved by V.Zlobin -->
		<Item>System.Alarms</Item>
		<!-- /IMPORTANT probes, modifications must be approved by V.Zlobin -->
		<Item>lag</Item>
		<Item>loadCollector</Item>
		<Item>gc</Item>
		<Item>fps</Item>
        <Item>memory</Item>
		<Item>cmd</Item>
	</turnOnProbes>
	<turnOffProbes>
	</turnOffProbes>
	<cloneMsgsToOtherServers>true</cloneMsgsToOtherServers>
	<checkResourceSystemIndex>false</checkResourceSystemIndex>
	<broadcastServerErrors>true</broadcastServerErrors>
	<broadcastFullServerErrors>true</broadcastFullServerErrors>
	<checkBunches>true</checkBunches>
	<clientStatsPeriodSeconds>60</clientStatsPeriodSeconds>
	<shardNetBuffSize>1000000</shardNetBuffSize>
	<recreateAuctionDatabase>false</recreateAuctionDatabase>
	<runGCAfterStart>false</runGCAfterStart>
	<loadLockTreshold>10000</loadLockTreshold>
    <clientNetTimeout>-1</clientNetTimeout>

	<msgQueueSettings>
		<localMsgQueueSize>32000</localMsgQueueSize>
		<defaultSize>32000</defaultSize>
	</msgQueueSettings>

	<bufferSettings>
		<defaultOutBufferSize>50000</defaultOutBufferSize>
		<defaultInBufferSize>50000</defaultInBufferSize>
		<connections>
			<Item>
				<from>FrontEnd</from>
				<to>GameMechanics</to>
				<outBufferSize>1000000</outBufferSize>
				<inBufferSize>10000000</inBufferSize>
			</Item>
			<Item>
				<from>GameMechanics</from>
				<to>FrontEnd</to>
				<outBufferSize>10000000</outBufferSize>
				<inBufferSize>1000000</inBufferSize>
			</Item>
			<Item>
				<from>ItemService</from>
				<to>GameMechanics</to>
				<outBufferSize>1000000</outBufferSize>
				<inBufferSize>1000000</inBufferSize>
			</Item>
			<Item>
				<from>GameMechanics</from>
				<to>ItemService</to>
				<outBufferSize>1000000</outBufferSize>
				<inBufferSize>1000000</inBufferSize>
			</Item>
			<Item>
